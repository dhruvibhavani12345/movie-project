<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container" style="background-color: pink;">
    <h1 class="my-4">Movie List</h1>
    <a href="/add" class="btn btn-primary mb-3">Add New Movie</a>
    <div class="row">
      <% movies.forEach(movie => { %>
        <div class="col-md-4">
          <div class="card mb-3">
            <img src="<%= movie.image %>" class="card-img-top" alt="<%= movie.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= movie.name %></h5>
              <p class="card-text"><%= movie.description %></p>
              <p><strong>Price:</strong> $<%= movie.price %></p>
              <a href="/edit/<%= movie.id %>" class="btn btn-warning">Edit</a>
              <a href="/delete/<%= movie.id %>" class="btn btn-danger">Delete</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
